@model dynamic

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="page-content">

    <div class="page-header">
        <h1>
            Dashboard
        </h1>
    </div>
    <!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->


            <div class="alert alert-block alert-success">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="ace-icon fa fa-times"></i>
                </button>

                <i class="ace-icon fa fa-check green"></i>

                Welcome to your dashboard. You can perform multiple tasks on this platform!
            </div>

            <div class="row">
                <div class="col-xs-12">

                    <div class="container">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="card-counter primary">
                                    <i class="fa fa-code-fork"></i>
                                    <span class="count-numbers">@Model.LeaveTypesCount</span>
                                    <span class="count-name">Leave Types</span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="card-counter danger">
                                    <i class="fa fa-ticket"></i>
                                    <span class="count-numbers">@Model.RejectedLeaves</span>
                                    <span class="count-name">Rejected Leaves</span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="card-counter success">
                                    <i class="fa fa-database"></i>
                                    <span class="count-numbers">@Model.ApprovedLeaves</span>
                                    <span class="count-name">Approved Leaves</span>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="card-counter info">
                                    <i class="fa fa-users"></i>
                                    <span class="count-numbers">@Model.ApprovalPendingLeaves</span>
                                    <span class="count-name">Leaves Pending</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="widget-box transparent">
                    <div class="widget-header widget-header-flat">
                        <h4 class="widget-title lighter">
                            <i class="ace-icon fa fa-star orange"></i>
                            Leave Balances
                        </h4>

                        <div class="widget-toolbar">
                            <a href="#" data-action="collapse">
                                <i class="ace-icon fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>

                    <div class="widget-body">
                        <div class="widget-main no-padding">
                            <table class="table table-bordered table-striped">
                                <thead class="thin-border-bottom">
                                    <tr>
                                        <th>
                                            <i class="ace-icon fa fa-caret-right blue"></i>Leave Type
                                        </th>

                                        <th>
                                            <i class="ace-icon fa fa-caret-right blue"></i>Days Entitled
                                        </th>

                                        <th class="hidden-480">
                                            <i class="ace-icon fa fa-caret-right blue"></i>Days Taken
                                        </th>

                                        <th class="hidden-480">
                                            <i class="ace-icon fa fa-caret-right blue"></i>Leave Balance
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (HumanResources.ViewModels.LeaveBalancesView leavebalance in Model.LeaveBalancesList)
                                    {
                                    <tr>
                                        <td>@leavebalance.LeaveType</td>

                                        <td>
                                            @leavebalance.DaysEntitled
                                        </td>

                                        <td class="hidden-480">
                                            @leavebalance.DaysTaken
                                        </td>
                                        <td class="hidden-480">
                                            @leavebalance.Balance
                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div><!-- /.widget-main -->
                    </div><!-- /.widget-body -->
                </div><!-- /.widget-box -->
            </div><!-- /.col -->

        </div>

        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->

